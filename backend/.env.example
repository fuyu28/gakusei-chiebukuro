# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_PAST_EXAM_BUCKET=past-exams

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Allowed Origins (comma-separated)
# development: http://localhost:3000,http://localhost:8080
# production: https://your-frontend.example
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080

# Allowed Email Domain
ALLOWED_EMAIL_DOMAIN=ccmailg.meijo-u.ac.jp

# Email Redirect URL (Supabase)
EMAIL_REDIRECT_TO=http://localhost:3000/auth/callback

# Email Verification
# development: メール認証をスキップ (false)
# production: メール認証を有効化 (true)
REQUIRE_EMAIL_VERIFICATION=false

# Auth Cookie
# development: https無しなら AUTH_COOKIE_SECURE=false
# production: AUTH_COOKIE_SAMESITE=none と AUTH_COOKIE_SECURE=true が必須
AUTH_COOKIE_NAME=auth_token
AUTH_COOKIE_SAMESITE=lax
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_DOMAIN=

# CSRF (double submit)
CSRF_COOKIE_NAME=csrf_token
CSRF_HEADER_NAME=X-CSRF-Token

# Auth response
RETURN_ACCESS_TOKEN=false

# Rate limit (auth endpoints)
AUTH_RATE_LIMIT_WINDOW_MS=600000
AUTH_RATE_LIMIT_MAX=20

# HSTS (set in production)
HSTS_MAX_AGE=15552000
